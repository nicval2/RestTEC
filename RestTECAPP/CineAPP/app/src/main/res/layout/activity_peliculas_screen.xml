<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peliculasScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:src="@mipmap/ic_launcher_foreground"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/S1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:onClick="getMovie1"
            android:text="@string/P1"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/S2"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="7dp"
            android:onClick="getMovie2"
            android:text="@string/P2"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        <Button
            android:id="@+id/S3"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="72dp"
            android:onClick="getMovie3"
            android:text="@string/P3"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        <Button
            android:id="@+id/S4"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="7dp"
            android:onClick="getMovie4"
            android:text="@string/P4"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        <Button
            android:id="@+id/S5"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="72dp"
            android:onClick="getMovie15"
            android:text="@string/P5"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/back"
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/round"
            android:onClick="onClickBack"
            android:text="@string/back"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>